        <TextBox x:Name="expediente" HorizontalAlignment="Left" Margin="300,329,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="225,75,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="edad" HorizontalAlignment="Left" Margin="241,204,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="apellido" HorizontalAlignment="Left" Margin="225,137,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="enfermedad" HorizontalAlignment="Left" Margin="203,272,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="N. Expediente" HorizontalAlignment="Left" Margin="192,337,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Actualizar" HorizontalAlignment="Left" Margin="225,5,0,0" VerticalAlignment="Top" Width="206" Height="49" FontSize="36" FontWeight="Bold" FontFamily="Arial Black" Background="White"/>

    </Grid>
</Window>
