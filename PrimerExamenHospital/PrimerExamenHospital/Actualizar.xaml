        <TextBox x:Name="apellido" HorizontalAlignment="Left" Margin="300,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="edad" HorizontalAlignment="Left" Margin="300,192,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
